<!DOCTYPE html>
<html>
  <head>
    <title>ActivePlusDemo</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- ===============================
         Stylesheets FIRST
    ================================ -->
    <%= stylesheet_link_tag "application",
          media: "all",
          "data-turbo-track": "reload" %>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <!-- ===============================
         Import Maps (Turbo + Stimulus)
         THIS REPLACES ESBUILD
    ================================ -->
    <%= javascript_importmap_tags %>

    <!-- Favicon -->
    <link rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üöÄ</text></svg>">
  </head>

  <body class="bg-light">
    <!-- ===============================
         Navbar
    ================================ -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ActivePlus Demo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <%= link_to "Vehicles",
                    vehicles_path,
                    class: "nav-link #{'active' if current_page?(vehicles_path)}" %>
            </li>
            <li class="nav-item">
              <%= link_to "Drivers",
                    drivers_path,
                    class: "nav-link #{'active' if current_page?(drivers_path)}" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- ===============================
         Flash messages + content
    ================================ -->
    <main class="container">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </main>

    <!-- ===============================
         Bootstrap JS (via CDN)
         OK with Import Maps
    ================================ -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      defer>
    </script>

    <!-- ===============================
         DEBUG: Turbo + Stimulus
    ================================ -->
    <script>
      document.addEventListener("turbo:load", () => {
        console.log("üö¶ Turbo page loaded");

        if (window.StimulusApplication) {
          console.log("‚úÖ Stimulus loaded");
          console.log(
            "Controllers:",
            Array.from(window.StimulusApplication.router.modules.keys())
          );
        } else {
          console.warn("‚ùå StimulusApplication not found");
        }

        if (window.Turbo) {
          console.log("‚úÖ Turbo loaded");
        } else {
          console.warn("‚ùå Turbo not found");
        }
      });
    </script>
  </body>
</html>
