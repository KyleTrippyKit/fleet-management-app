<!DOCTYPE html>
<html>
  <head>
    <title>ActivePlusDemo</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- ===============================
         Stylesheets FIRST
    ================================ -->
    <%= stylesheet_link_tag "application",
          media: "all",
          "data-turbo-track": "reload" %>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <!-- ===============================
         Chart.js CDN (ADD THIS LINE)
    ================================ -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <!-- ===============================
         Import Maps (Turbo + Stimulus)
         THIS REPLACES ESBUILD
    ================================ -->
    <%= javascript_importmap_tags %>
    <%= javascript_include_tag "https://unpkg.com/frappe-gantt@0.6.1/dist/frappe-gantt.js" %>
    <%= stylesheet_link_tag "https://unpkg.com/frappe-gantt@0.6.1/dist/frappe-gantt.css" %>

    <!-- Favicon -->
    <link rel="icon"
      href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>üöÄ</text></svg>">
  </head>

  <body class="bg-light">
    <!-- ===============================
         Navbar
    ================================ -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">ActivePlus Demo</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <%= link_to "Vehicles",
                    vehicles_path,
                    class: "nav-link #{'active' if current_page?(vehicles_path)}" %>
            </li>
            <li class="nav-item">
              <%= link_to "Usage Analytics",
                    vehicle_usages_path,
                    class: "nav-link #{'active' if current_page?(vehicle_usages_path)}" %>
            </li>
            <li class="nav-item">
              <%= link_to "Drivers",
                    drivers_path,
                    class: "nav-link #{'active' if current_page?(drivers_path)}" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- ===============================
         Flash messages + content
    ================================ -->
    <main class="container">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </main>

    <!-- ===============================
         Bootstrap JS (via CDN)
         OK with Import Maps
    ================================ -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      defer>
    </script>

    <!-- ===============================
         DEBUG: Turbo + Stimulus + Chart.js
    ================================ -->
    <script>
      document.addEventListener("turbo:load", () => {
        console.log("üö¶ Turbo page loaded");

        // Check Stimulus
        if (window.Stimulus) {
          console.log("‚úÖ Stimulus loaded");
          console.log("Stimulus version:", window.Stimulus.application.schema.version);
        } else {
          console.warn("‚ùå Stimulus not found");
        }

        // Check Turbo
        if (window.Turbo) {
          console.log("‚úÖ Turbo loaded");
        } else {
          console.warn("‚ùå Turbo not found");
        }

        // Check Chart.js (ADDED)
        if (window.Chart) {
          console.log("‚úÖ Chart.js loaded via CDN");
          console.log("Chart.js version:", Chart.version);
        } else {
          console.error("‚ùå Chart.js not loaded - CDN failed");
        }

        // Check for chart controller
        const chartElement = document.querySelector('[data-controller="chart"]');
        if (chartElement) {
          console.log("üìä Chart element found:", chartElement);
          console.log("üìä Chart data:", JSON.parse(chartElement.dataset.chartUsageDataValue || '[]'));
        }
      });
    </script>
  </body>
</html>