<div class="container py-4">
  <h1 class="mb-4 text-primary fw-bold">Vehicle Fleet Dashboard</h1>

  <!-- ============================================================
       Navigation Tabs
       ============================================================ -->
  <ul class="nav nav-tabs mb-4" id="vehiclesTab" role="tablist">
    <li class="nav-item" role="presentation">
      <%= link_to "Vehicle List",
            vehicles_path,
            class: "nav-link #{'active' if current_page?(vehicles_path)}" %>
    </li>

    <li class="nav-item" role="presentation">
      <%= link_to "Usage Analytics",
            analytics_vehicles_path,
            class: "nav-link #{'active' if current_page?(analytics_vehicles_path)}" %>
    </li>

    <li class="nav-item" role="presentation">
      <%= link_to "Maintenance Gantt Chart",
            gantt_path,
            class: "nav-link #{'active' if current_page?(gantt_path)}" %>
    </li>

    <li class="nav-item" role="presentation">
      <%= link_to "Maintenance",
            maintenance_dashboard_vehicles_path,
            class: "nav-link #{'active' if current_page?(maintenance_dashboard_vehicles_path)}" %>
    </li>

    <li class="nav-item" role="presentation">
      <%= link_to "Drivers",
            drivers_path,
            class: "nav-link #{'active' if controller_name == 'drivers'}" %>
    </li>
  </ul>

  <!-- ============================================================
       Filter Form
       ============================================================ -->
  <%= form_with url: analytics_vehicles_path, method: :get, local: true,
        class: "row g-3 align-items-end mb-4 shadow-sm p-3 rounded" do %>

    <div class="col-md-3">
      <%= label_tag :from, "From", class: "form-label fw-semibold" %>
      <%= date_field_tag :from, params[:from] || 30.days.ago.to_date, class: "form-control form-control-sm" %>
    </div>

    <div class="col-md-3">
      <%= label_tag :to, "To", class: "form-label fw-semibold" %>
      <%= date_field_tag :to, params[:to] || Date.today, class: "form-control form-control-sm" %>
    </div>

    <div class="col-md-3">
      <%= label_tag :owner, "Service Owner", class: "form-label fw-semibold" %>
      <%= select_tag :owner,
            options_for_select(["All", "PTSC", "Police", "Fire Service"], params[:owner] || "All"),
            class: "form-select form-select-sm auto-submit-owner" %>
    </div>

    <div class="col-md-3">
      <%= submit_tag "Filter", class: "btn btn-primary btn-sm w-100" %>
    </div>

  <% end %>

  <!-- ============================================================
       Vehicle Cards Grid
       ============================================================ -->
  <% if @chart_data.present? && @chart_data.any? %>
    <!-- View Controls & Stats -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h5 class="mb-0">Vehicle Utilization Overview</h5>
        <small class="text-muted">
          <% start_num = (@page - 1) * @per_page + 1 %>
          <% end_num = [@page * @per_page, @total_vehicles].min %>
          Showing <%= start_num %>-<%= end_num %> 
          of <%= @total_vehicles %> vehicles
        </small>
      </div>
      <div class="btn-group btn-group-sm" role="group">
        
          <%= link_to "Grid View", analytics_vehicles_path(analytics_params(view: 'grid')), 
                class: "btn #{@view != 'table' ? 'btn-primary' : 'btn-outline-primary'}" %>
          <%= link_to "Table View", analytics_vehicles_path(analytics_params(view: 'table')), 
                class: "btn #{@view == 'table' ? 'btn-primary' : 'btn-outline-primary'}" %>
      </div>
    </div>

    <% if @view == 'table' %>
      <!-- Table View -->
      <div class="card shadow-sm">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Vehicle</th>
                  <th>License Plate</th>
                  <th>Owner</th>
                  <th>Utilization</th>
                  <th>Distance (km)</th>
                  <th>Hours</th>
                  <th>Trips</th>
                </tr>
              </thead>
              <tbody>
                <% @paginated_vehicles.each do |vehicle| %>
                  <tr>
                    <td><%= vehicle[:make] %> <%= vehicle[:model] %></td>
                    <td><code><%= vehicle[:registration_number] %></code></td>
                    <td><span class="badge bg-<%= owner_color(vehicle[:service_owner]) %>"><%= vehicle[:service_owner] %></span></td>
                    <td>
                      <div class="d-flex align-items-center">
                        <div class="progress flex-grow-1" style="height: 6px;">
                          <div class="progress-bar bg-<%= utilization_color(vehicle[:utilization]) %>" 
                               style="width: <%= vehicle[:utilization] %>%;"></div>
                        </div>
                        <span class="ms-2"><%= vehicle[:utilization] %>%</span>
                      </div>
                    </td>
                    <td><%= number_with_precision(vehicle[:distance_km], precision: 0) %></td>
                    <td><%= number_with_precision(vehicle[:hours_plied], precision: 0) %></td>
                    <td><%= vehicle[:trip_count] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% else %>
      <!-- Grid View (Default) -->
      <div class="row" id="vehicle-cards-grid">
        <% @paginated_vehicles.each do |vehicle| %>
          <% 
            # Extract vehicle name and license plate
            vehicle_name = "#{vehicle[:make]} #{vehicle[:model]}"
            license_plate = vehicle[:registration_number]
            
            # Determine color based on utilization
            color = case vehicle[:utilization]
              when 0..30 then '#FF6B6B'  # Red for low
              when 31..70 then '#FFA726' # Orange for medium
              else '#4CAF50'             # Green for high
            end
          %>
          <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
            <div class="card vehicle-card h-100 shadow-sm border-0">
              <div class="card-body text-center p-3">
                <!-- Circular Progress -->
                <div class="circular-progress mb-3" 
                     style="--percentage: <%= vehicle[:utilization] %>; 
                            --color: <%= color %>;">
                  <div class="progress-value">
                    <%= number_with_precision(vehicle[:utilization], precision: 0) %>%
                  </div>
                  <div class="progress-label">Utilization</div>
                </div>
                
                <!-- Vehicle Info -->
                <h6 class="vehicle-name mb-2" title="<%= vehicle_name %>">
                  <%= truncate(vehicle_name, length: 25) %>
                </h6>
                <p class="license-plate mb-3">
                  <code><%= license_plate %></code>
                </p>
                
                <!-- Owner Badge -->
                <div class="mb-3">
                  <span class="badge bg-<%= owner_color(vehicle[:service_owner]) %>">
                    <%= vehicle[:service_owner] %>
                  </span>
                </div>
                
                <!-- Stats -->
                <div class="vehicle-stats">
                  <div class="row g-2">
                    <div class="col-4">
                      <div class="stat-item">
                        <div class="stat-value"><%= number_with_precision(vehicle[:distance_km], precision: 0) %></div>
                        <div class="stat-label">KM</div>
                      </div>
                    </div>
                    <div class="col-4">
                      <div class="stat-item">
                        <div class="stat-value"><%= number_with_precision(vehicle[:hours_plied], precision: 0) %></div>
                        <div class="stat-label">Hours</div>
                      </div>
                    </div>
                    <div class="col-4">
                      <div class="stat-item">
                        <div class="stat-value"><%= vehicle[:trip_count] %></div>
                        <div class="stat-label">Trips</div>
                      </div>
                    </div>
                  </div>
                  <div class="mt-2 pt-2 border-top text-muted small">
                    <i class="bi bi-calendar"></i> <%= vehicle[:total_days] %> days analyzed
                  </div>
                </div>
                
                <!-- Quick Actions -->
                <div class="mt-3 pt-2 border-top">
                  <div class="btn-group btn-group-sm w-100">
                    <% if vehicle[:id] && vehicle[:id] > 0 %>
                      <%= link_to "Details", full_details_vehicle_path(vehicle[:id]), class: "btn btn-outline-secondary btn-sm flex-fill" %>
                      <%= link_to "Trips", trips_vehicle_path(vehicle[:id]), class: "btn btn-outline-primary btn-sm flex-fill" %>
                    <% else %>
                      <button class="btn btn-outline-secondary btn-sm flex-fill" disabled>Details</button>
                      <button class="btn btn-outline-secondary btn-sm flex-fill" disabled>Trips</button>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- Pagination -->
    <% if @total_vehicles > @per_page %>
      <nav class="mt-4">
        <ul class="pagination justify-content-center">
          <% 
            current_page = @page
          %>
          
          <!-- Previous -->
          <% if current_page > 1 %>
            <li class="page-item">
              <%= link_to "Previous", analytics_vehicles_path(analytics_params(page: current_page - 1)), class: "page-link" %>
            </li>
          <% else %>
            <li class="page-item disabled">
              <span class="page-link">Previous</span>
            </li>
          <% end %>
          
          <!-- Page Numbers -->
          <% (1..@total_pages).each do |page| %>
            <% if page == current_page %>
              <li class="page-item active">
                <span class="page-link"><%= page %></span>
              </li>
            <% elsif (page - current_page).abs <= 2 || page == 1 || page == @total_pages %>
              <li class="page-item">
                <%= link_to page, analytics_vehicles_path(page: page, **request.query_parameters), class: "page-link" %>
              </li>
            <% elsif (page - current_page).abs == 3 %>
              <li class="page-item disabled">
                <span class="page-link">...</span>
              </li>
            <% end %>
          <% end %>
          
          <!-- Next -->
          <% if current_page < @total_pages %>
            <li class="page-item">
              <%= link_to "Next", analytics_vehicles_path(page: current_page + 1, **request.query_parameters), class: "page-link" %>
            </li>
          <% else %>
            <li class="page-item disabled">
              <span class="page-link">Next</span>
            </li>
          <% end %>
        </ul>
      </nav>
    <% end %>
    
  <% else %>
    <!-- No Data -->
    <div class="card shadow-sm">
      <div class="card-body text-center py-5">
        <i class="bi bi-car-front text-muted" style="font-size: 3rem;"></i>
        <h4 class="mt-3">No vehicle data found</h4>
        <p class="text-muted">No trip data found for the selected period.</p>
        <% if Vehicle.any? %>
          <%= link_to "Add a trip", new_vehicle_vehicle_usage_path(Vehicle.first), class: "btn btn-primary mt-2" %>
          <%= link_to "View All Vehicles", vehicles_path, class: "btn btn-outline-secondary mt-2" %>
        <% else %>
          <%= link_to "Add First Vehicle", new_vehicle_path, class: "btn btn-primary mt-2" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<!-- Styles -->
<style>
  /* Circular Progress */
  .circular-progress {
    position: relative;
    height: 120px;
    width: 120px;
    border-radius: 50%;
    background: conic-gradient(var(--color) calc(var(--percentage) * 3.6deg), #f0f0f0 0deg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
  }
  
  .circular-progress::before {
    content: "";
    position: absolute;
    height: 100px;
    width: 100px;
    border-radius: 50%;
    background-color: white;
  }
  
  .progress-value {
    position: relative;
    font-size: 28px;
    font-weight: bold;
    color: #333;
    z-index: 1;
    line-height: 1;
  }
  
  .progress-label {
    position: absolute;
    bottom: -20px;
    width: 100%;
    text-align: center;
    font-size: 12px;
    color: #666;
    z-index: 1;
  }
  
  /* Vehicle Card */
  .vehicle-card {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 12px;
    border: 1px solid #e9ecef;
  }
  
  .vehicle-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.1) !important;
    border-color: #dee2e6;
  }
  
  .vehicle-name {
    font-weight: 600;
    color: #2c3e50;
    font-size: 15px;
    line-height: 1.3;
    min-height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 8px !important;
  }
  
  .license-plate {
    background-color: #f8f9fa;
    padding: 6px 10px;
    border-radius: 6px;
    font-family: 'SF Mono', 'Roboto Mono', Consolas, 'Courier New', monospace;
    font-weight: 500;
    font-size: 14px;
    color: #495057;
    display: inline-block;
    margin-bottom: 12px !important;
    border: 1px solid #dee2e6;
  }
  
  /* Stats */
  .vehicle-stats {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 12px;
    border-radius: 10px;
    margin: 12px 0;
  }
  
  .stat-item {
    text-align: center;
  }
  
  .stat-value {
    font-weight: 700;
    color: #2c3e50;
    font-size: 18px;
    line-height: 1.2;
  }
  
  .stat-label {
    font-size: 11px;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 2px;
  }
  
  /* Responsive adjustments */
  @media (max-width: 1400px) {
    .circular-progress {
      height: 110px;
      width: 110px;
    }
    
    .circular-progress::before {
      height: 90px;
      width: 90px;
    }
    
    .progress-value {
      font-size: 24px;
    }
  }
  
  @media (max-width: 768px) {
    .circular-progress {
      height: 100px;
      width: 100px;
    }
    
    .circular-progress::before {
      height: 80px;
      width: 80px;
    }
    
    .progress-value {
      font-size: 22px;
    }
    
    .vehicle-name {
      font-size: 14px;
      min-height: 36px;
    }
    
    .stat-value {
      font-size: 16px;
    }
  }
</style>

<!-- JavaScript -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Auto-submit owner filter
    document.querySelectorAll(".auto-submit-owner").forEach(select => {
      select.addEventListener("change", () => {
        const form = select.closest("form");
        if (form) form.submit();
      });
    });
  });
</script>