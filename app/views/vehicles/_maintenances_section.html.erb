<h3 class="mt-4">Maintenance Records</h3>
<%= link_to "Add Maintenance", new_vehicle_maintenance_path(vehicle), class: "btn btn-primary mb-3" %>

<% if vehicle.maintenances.any? %>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Status</th>
        <th>Cost</th>
        <th>Notes</th>
        <th>Urgency</th>
        <th>Service Provider</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% vehicle.maintenances.order(date: :desc).each do |m| %>
        <tr>
          <td><%= m.date %></td>
          <td><%= m.service_type %></td>
          <td><%= m.status %></td>
          <td><%= m.cost.present? ? number_to_currency(m.cost) : "-" %></td>
          <td><%= m.notes.presence || "-" %></td>
          <td>
            <% if m.urgency_label == "Fast" %>
              <span class="badge bg-success">Fast</span>
            <% else %>
              <span class="badge bg-warning">Soon</span>
            <% end %>
          </td>
          <td><%= m.service_provider&.name || "Not assigned" %></td>
          <td>
            <%= link_to "Show", vehicle_maintenance_path(vehicle, m), class: "btn btn-sm btn-secondary" %>
            <%= link_to "Edit", edit_vehicle_maintenance_path(vehicle, m), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", vehicle_maintenance_path(vehicle, m), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No maintenance records yet. <%= link_to "Add one now", new_vehicle_maintenance_path(vehicle) %></p>
<% end %>
