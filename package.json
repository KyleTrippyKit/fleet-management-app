{
  "name": "activeplus-demo",
  "private": true,
  "dependencies": {
    "@hotwired/turbo-rails": "^7.3.0",
    "@hotwired/stimulus": "^3.2.1",
    "@rails/ujs": "^7.1.3",
    "chart.js": "^4.4.0",
    "chartkick": "^5.0.1"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/application.js --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --external:@rails/ujs --external:chartkick --external:chart.js",
    "build:watch": "esbuild app/javascript/application.js --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets --watch --external:@rails/ujs --external:chartkick --external:chart.js"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
